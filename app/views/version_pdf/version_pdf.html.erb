<html>
  <head>
    <meta name='pdfkit-orientation' content='portrait' />

    <style type="text/css">
      body {
        color: #000000;
        font-family: Courier;
        font-size: 12px;
      }
      body, td, th, input, textarea, select, a {
        font-size: 12px;
      }
      h1{
        font-family: Courier;
      }
      p {
        margin-top: 0px;
        margin-bottom: 20px;
      }
      #container {
        width: 700px;
      }
      table.list {
        border-collapse: collapse;
        width: 100%;
        border-top: 1px solid #DDDDDD;
        border-left: 1px solid #DDDDDD;
        margin-bottom: 20px;
      }
      table.list td {
        border-right: 1px solid #DDDDDD;
        border-bottom: 1px solid #DDDDDD;
      }
      table.list thead td {
        background-color: #EFEFEF;
        padding: 0px 5px;
      }
      table.list thead td a, .list thead td {
        text-decoration: none;
        color: #222222;
        font-weight: bold;
      }
      table.list tbody td a {
        text-decoration: underline;
      }
      table.list tbody td {
        vertical-align: top;
        padding: 0px 5px;
      }
      table.list .left {
        text-align: left;
        padding: 7px;
      }
      table.list .right {
        text-align: right;
        padding: 7px;
      }
      table.list .center {
        text-align: center;
        padding: 7px;
      }
      .small{
        font-size: 10px;
      }
      thead { display: table-header-group }
      tfoot { display: table-row-group }
      tr { page-break-inside: avoid }
    </style>
  </head>
  <body>
    <div class="container">

      <h1>Version Report for <%= project.name %></h1>

      <p>
        <b>Date:</b> <%= DateTime.now.strftime("%b %d, %Y - %I:%m %p") %> <br/>
      </p>

      <div>
        <p>
          <b>Project:</b> <%= project.name %> <span class="small">(<%= project.id.to_s %>)</span> <br/>
          <b>Bill of materials:</b>
        </p>

        <table class="list">
          <thead>
            <tr>
              <td class="left">Status</td>
              <td class="left">Component</td>
              <td class="left">Used Version</td>
              <td class="left">Newest Version</td>
            </tr>
          </thead>
          <tbody>
            <% [:outdated, :unknown, :ok].each do |key| %>
              <% project.ver_pdf_list[key].each do |dep| %>
                <% cell_style = "" %>
                <% if key.to_s.eql?("outdated") %>
                  <% cell_style = "font-weight: bold; color: red;" %>
                <% elsif key.to_s.eql?("unknown") %>
                  <% cell_style = "color: orange;" %>
                <% end %>
                <tr>
                  <td class="left" style="<%= cell_style %>">
                    <%= dep[:status].to_s %>
                  </td>
                  <td class="left" style="<%= cell_style %>">
                    (<%= dep[:language] %>) <%= dep[:component] %>
                    <% if dep[:group_id] %>
                      <br/> <span class='small'>GroupId: <%= dep[:group_id] %></span>
                    <% end %>
                  </td>
                  <td class="left" style="<%= cell_style %>">
                    <% if dep[:version].to_s.strip.match(/\A\:path/) %>
                      :path
                    <% elsif dep[:version].to_s.strip.match(/\A\:git/) %>
                      :git
                    <% else %>
                      <%= dep[:version].to_s.strip %>
                    <% end %>
                  </td>
                  <td class="left" style="<%= cell_style %>">
                    <%= dep[:newest].to_s.strip %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if children && !children.empty? %>
        <% children.each do |project| %>
          <div>
            <p>
              <b>Project:</b> <%= project.name %> <span class="small">(<%= project.id.to_s %>)</span> <br/>
              <b>Bill of materials:</b>
            </p>

            <table class="list">
              <thead>
                <tr>
                  <td class="left">Status</td>
                  <td class="left">Component</td>
                  <td class="left">Used Version</td>
                  <td class="left">Newest Version</td>
                </tr>
              </thead>
              <tbody>
                <% [:outdated, :unknown, :ok].each do |key| %>
                  <% project.ver_pdf_list[key].each do |dep| %>
                    <% cell_style = "" %>
                    <% if key.to_s.eql?("outdated") %>
                      <% cell_style = "font-weight: bold; color: red;" %>
                    <% elsif key.to_s.eql?("unknown") %>
                      <% cell_style = "color: orange;" %>
                    <% end %>
                    <tr>
                      <td class="left" style="<%= cell_style %>">
                        <%= dep[:status].to_s %>
                      </td>
                      <td class="left" style="<%= cell_style %>">
                        (<%= dep[:language] %>) <%= dep[:component] %>
                        <% if dep[:group_id] %>
                          <br/> <span class='small'>GroupId: <%= dep[:group_id] %></span>
                        <% end %>
                      </td>
                      <td class="left" style="<%= cell_style %>">
                        <% if dep[:version].to_s.strip.match(/\A\:path/) %>
                          :path
                        <% elsif dep[:version].to_s.strip.match(/\A\:git/) %>
                          :git
                        <% else %>
                          <%= dep[:version].to_s.strip %>
                        <% end %>
                      </td>
                      <td class="left" style="<%= cell_style %>">
                        <%= dep[:newest].to_s.strip %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      <% end %>

    </div>
  </body>
</html>
